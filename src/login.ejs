<header class="header clearfix">
    <nav class="navbar navbar-light">
        <span class="navbar-brand" href="#">
            <img src="./img/logo.png" height="30" class="d-inline-block align-top">
            海外聯招會各校下載系統
        </span>
    </nav>
</header>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                    <input type="text" id="username" class="form-control" placeholder="Username">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>
                    <input type="password" id="password" class="form-control" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-puzzle-piece" aria-hidden="true"></i>
                        </div>
                    </div>
                    <input type="text" id="identifying-code" class="form-control" placeholder="驗證碼" aria-describedby="basic-addon1">
                    <canvas id="identifying-canvas" width="120" height="40" title="點擊圖片可更新驗證碼"></canvas>
                </div>
            </div>
            <!--
            <div class="form-group">
                <p class="text-right">
                    <a href="">無法登入？</a>
                </p>
            </div>
            -->
            <div class="form-group">
                <button type="button" class="btn btn-success btn-block" id="btn-login">登入</button>
            </div>
            <div class="form-group">
                <p id="errMsg"></p>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/gh/emn178/js-sha256/src/sha256.js"></script>
